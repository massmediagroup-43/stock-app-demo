 <div class="col-lg-4 offset-lg-4">
    <%= simple_form_for(@stock) do |f| %>
    <div class="form-group">
        <%= f.input :name, value: @stock.name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.input :duration, value: @stock.duration, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.input :price, value: @stock.price, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.input :interest, value: @stock.interest, class: 'form-control' %>
      </div>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>